<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!--Element to create for such basic types as string double, int, etc. -->
  <TextBlock x:Name="Label_System.String" Text="{Binding}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100"/>
  <TextBlock x:Name="Field_System.String" Text="{Binding}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150"/>

  <!--Element to create for boolean -->
  <TextBlock x:Name="Label_System.Boolean" Text="{Binding}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100"/>
  <CheckBox x:Name="Field_System.Boolean" IsChecked="{Binding}" HorizontalAlignment="Left" VerticalAlignment="Top"/>

  <!--Element to create for ImageSource -->
  <TextBlock x:Name="Label_System.Windows.Media.ImageSource" Text="{Binding}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100"/>
  <Image x:Name="Field_System.Windows.Media.ImageSource" Source="{Binding}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="100"/>
</Grid>