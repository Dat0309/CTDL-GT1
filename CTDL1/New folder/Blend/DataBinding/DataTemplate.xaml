<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!--Element to create for such basic types as string double, int, etc. -->
  <TextBlock x:Name="Field_System.String" Text="{Binding}"/>

  <!--Element to create for boolean -->
  <CheckBox x:Name="Field_System.Boolean" IsChecked="{Binding}"/>

  <!--Element to create for ImageSource -->
  <Image x:Name="Field_System.Windows.Media.ImageSource" Source="{Binding}" HorizontalAlignment="Left" Height="64" Width="64"/>
</StackPanel>